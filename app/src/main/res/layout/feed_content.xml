<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/feeds_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    android:clickable="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="6dp"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/round_corners2">

        <TextView
            android:id="@+id/feeds_username"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text="User"
            android:textSize="18dp"
            android:background="@drawable/round_corners3"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:clickable="false" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corners"
            android:clickable="false">

            <ImageView
                android:id="@+id/feeds_image"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:scaleType="fitXY"
                android:clickable="false"
                android:src="@drawable/uploadimage" />
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/feeds_like_btn"
                android:layout_width="28dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="10dp" />

            <TextView
                android:id="@+id/feeds_likes_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:textColor="#303030"
                android:textStyle="bold"
                android:textSize="17dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/feeds_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="content"
            android:textSize="17dp"
            android:layout_marginTop="2dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:textColor="#2F2F2F"
            android:layout_marginHorizontal="12dp"
            android:clickable="false" />

        <TextView
            android:id="@+id/feeds_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="textEnd"
            android:layout_marginVertical="4dp"
            android:layout_gravity="end"
            android:textColor="#4A4949"
            android:text="timestamp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="4dp" />


    </LinearLayout>
</androidx.cardview.widget.CardView>