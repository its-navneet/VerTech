<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.new_post">

    <FrameLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="New Post"
                android:textSize="22dp"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical" />
        </LinearLayout>
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topbar"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/selectphoto_imageview_feed"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitXY"
                android:layout_marginHorizontal="5dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/add_photo" />
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/add_post_photo"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/maintheme"
            android:text="Add Photo"
            android:textSize="20dp"
            android:textColor="@color/white" />


        <EditText
            android:id="@+id/feed_text_content"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/border"
            android:gravity="top"
            android:layout_marginHorizontal="20dp"
            android:padding="5dp"
            android:hint="Write Here....."
            android:inputType="text"
            android:textColorHint="@color/hint_color"
            android:textSize="18dp" />

        <Button
            android:id="@+id/upload_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/maintheme"
            android:text="Upload"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/loading_view_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            app:indicatorColor="@color/colorAccent"
            app:indicatorName="SemiCircleSpinIndicator" />
    </LinearLayout>

</RelativeLayout>